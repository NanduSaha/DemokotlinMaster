<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            >

            <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_search"/>

            <FrameLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >


                <ImageView
                        android:id="@+id/ivNotification"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_notification_white"/>
                <LinearLayout
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:padding="3dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_bg"
                    android:layout_gravity="right|top">
                <TextView
                    android:id="@+id/tvNotificationCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="right|top"/>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                >


                <ImageView
                    android:id="@+id/ivCart"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cart"/>
                <LinearLayout
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:padding="3dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_bg"
                    android:layout_gravity="right|top">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="right|top"/>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivHome"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/menu"/>


    </RelativeLayout>
    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp">
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:hint="@string/search_product"
            android:imeOptions="actionDone"
            android:textColorHint="@color/colorVlightGray"
            android:singleLine="true"
            android:drawablePadding="@dimen/_10sdp"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/_10sdp"
            android:drawableLeft="@drawable/ic_search_magnifier_interface_symbol"
            android:background="@drawable/rounded_edit_text"/>
    </RelativeLayout>

</LinearLayout>